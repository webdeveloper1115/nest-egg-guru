<main class="page-forgotpw">
  <div class="banner">
    <h1>Reset Your Password</h1>
    <p>Enter your New Password.</p>
  </div>

  <div class="row">
    <div class="large-6 large-centered medium-8 medium-centered columns">
      <form method="POST" action="/user/reset-password" class="pw-form clearfix">
        <div class="row clearfix">
          <div class="small-12 columns">
            <label>New Password
              <input type="password" name="password" class="general-input" />
            </label>
          </div>
        </div>
        <div class="row clearfix">
          <div class="small-12 columns">
            <label>Confirm Password
              <input type="password" name="confirmPassword" class="general-input no-margin" />
              <input type="text" name="sptoken" class="hidden" value="{{token}}" hidden>
              {{#if message}}
                <small class="error">{{message}}</small>
              {{/if}}
            </label>
          </div>
        </div>
        <div class="row clearfix bottom">
          <div class="small-6 columns">
            <button class="primary-btn">Reset</button>
          </div>
          <div class="small-6 columns remember">
          </div>
        </div>
      </form>
    </div>
  </div>

</main>